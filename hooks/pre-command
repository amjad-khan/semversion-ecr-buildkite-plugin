#!/bin/bash

# Grab an existing global environment variable
NEXT_VER_GLOBAL=${MY_GLOBAL_VAR:-"default_value"}

# Modify the variable (e.g., append text)
NEXT_VER_GLOBAL="${NEXT_VER_GLOBAL}-modified"

# Export it so itâ€™s available to the main command
export NEXT_VER_GLOBAL
echo "MY_GLOBAL_VAR is now set to: $NEXT_VER_GLOBAL"